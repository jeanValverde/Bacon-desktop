        function modificarMesa(idMesa, estado_mesa) {

            var datos = [{ "id_mesa": idMesa, "estado_mesa": estado_mesa }];

            ipcRenderer.send('async-ModificarMesa', datos);
            var loader = document.getElementById('loader');
